<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/name"
                class="fragment.SimpleTextInputCellFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_inputtcell_simpletext" />

            />

            <fragment
                android:id="@+id/password"
                class="fragment.SimpleTextInputCellFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_inputtcell_simpletext" />
            />

            <fragment
                android:id="@+id/input_email"
                class="fragment.SimpleTextInputCellFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_inputtcell_simpletext" />

            <fragment
                android:id="@+id/surepassord"
                class="fragment.SimpleTextInputCellFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_inputtcell_simpletext" />
            />

            <fragment
                android:id="@+id/InputPicture"
                class="com.example.administrator.myapplication.PictureInputCellFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_inputcell_picture" />

            <Button
                android:id="@+id/btn_sure_register"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提交"


                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
